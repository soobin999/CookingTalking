<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cook.talk.model.dao.TalkDAO">

<select id="List" resultType="com.cook.talk.model.VO.TalkVO">
select * from talk ORDER BY talkCode DESC
</select>

<!-- 게시글 작성 -->
<insert id="insert" parameterType="com.cook.talk.model.VO.TalkVO">
insert into talk (talkCode,talkCont, userId ,talkDate) values
(#{talkCode},#{talkCont},#{userId},#{talkDate})
</insert>

<!-- 게시글 상세보기  -->
<select id="read" resultType="com.cook.talk.model.VO.TalkVO">
select * from talk where talkCode=#{talkCode}
</select>

<!-- 게시글 수정 처리 -->
<update id="update">
update talk set talkCont=#{talkCont} where talkCode=#{talkCode}
</update>

<delete id="delete">
delete from talk where talkCont=#{talkCont}
</delete>

	<select id= "insertTalk" resultType="int">
	Select substring((select talkCode from talk order by talkCode desc
		limit 1), 3);
	</select>


</mapper>